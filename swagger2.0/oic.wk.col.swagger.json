                        "schema": {
                            "$ref": "#/definitions/sbatch-retrieve"
                        }
                    },
                    "403": {
                        "description": "one or more targets did not return OK status; return a retrieve representation of the current state of all targets in the batch",
                        "x-example": [
                            {
                                "href": "switch",
                                "rep": {
