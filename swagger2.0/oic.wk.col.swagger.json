                            },
                            {
                                "href": "airFlow",
                                "rep": {
                                    "direction": "floor",
                                    "speed": 3
                                }
                            }
                        ],
                        "schema": {
                            "$ref": "#/definitions/sbatch-retrieve"
                        }
                    }
                }
            }
        },
