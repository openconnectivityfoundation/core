{
  "$schema": "http://json-schemas.org/draft-04/schema#",
  "description" : "Copyright (c) 2016, 2017 Open Connectivity Foundation, Inc. All rights reserved.",
  "id": "https://www.openconnectivity.org/ocf-apis/core/schemas/oic.wk.mnt-schema.json#",
  "definitions": {
    "oic.wk.mnt": {
      "type": "object",
      "anyOf": [
        {"required": ["fr"]},
        {"required": ["rb"]},
        {"required": ["err"]}
      ],
      "properties": {
        "fr":{
          "type": "boolean",
          "description": "Factory Reset, true= start factory reset, false=no action"
        },
        "rb": {
          "type": "boolean",
          "description": "Reboot Action, true= start reboot, false=no action, after reboot the value shall be false"
        }        ,
        "err": {
          "type": "integer",
          "readOnly" : true,
          "description": "last HTTP occurred error",
          "minimum" : 399,
          "maximum" : 599
        }
      }
    }
  },
  "type": "object",
  "allOf": [
    { "$ref": "oic.core-schema.json#/definitions/oic.core"},
    { "$ref": "#/definitions/oic.wk.mnt" }
  ]
}
